<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    tools:context=".loginActivity"
    android:id="@+id/parentt">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_alignParentTop="true"
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:id="@+id/imageView2"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textStyle="bold"
                android:fontFamily="@font/nanumsquareextrabold"
                android:textSize="17dp"
                android:layout_weight="1"
                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageLayout"


            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayout"
            android:layout_marginTop="25dp"
            android:orientation="vertical"

            >


        </LinearLayout>

        <LinearLayout
            android:id="@+id/idtextLayout"
            android:layout_below="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_alignParentTop="true"
            android:paddingLeft="40dp"
            android:paddingRight="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="300dp"
            android:layout_marginRight="20dp"
            >

            <EditText
                android:id="@+id/register_id"
                android:layout_width="259dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="아이디"
                android:paddingLeft="20dp"
                android:textSize="13dp"
                android:text="admin"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/pwdtextLayout"
            android:layout_below="@+id/idtextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="25dp"
            >


            <EditText
                android:id="@+id/register_pw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:hint="비밀번호"
                android:textSize="13dp"
                android:inputType="textPassword"
                android:background="@drawable/border"
                android:text="1234"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/pwdtextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="비밀번호를 잊으셨나요?"
                android:textAlignment="textStart"
                android:textColor="#c8c8c8"

                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/joinButtonLayout"
            android:layout_marginBottom="15dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:orientation="horizontal">


            <Button

                android:id="@+id/register_btn"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:fontFamily="@font/nanumsquareextrabold"
                android:text="로그인"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

<!--            <ImageButton-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:paddingStart="10dp"-->
<!--                android:src="@drawable/login_icon"-->
<!--                android:background="@android:color/transparent" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/joinButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"

            >



            <Button
                android:id="@+id/register_btn1"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/register_button"
                android:text="회원가입"
                android:textColor="#009a9a"
                android:fontFamily="@font/nanumsquareextrabold"
                android:textSize="15dp"

                />


        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>